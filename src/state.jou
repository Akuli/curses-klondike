import "./klondike.jou"
import "./card.jou"
import "./selectmove.jou"


@public
class Args:
    color: bool
    pick: int
    discardhide: bool


@public
class AppState:
    args: Args

    # For error messages and such
    program_name: byte*

    # Has initscr() been called successfully? If yes, we need to restore
    # terminal to its original state with endwin() when exiting.
    screen_inited: bool

    # The main game state
    klon: Klondike

    # What user is currently doing
    selmv: SelectionOrMove

    # This is where cards are actually stored.
    #
    # Rarely accessed directly. It is much more common to pass around pointers
    # to the individual cards.
    card_array: Card[52]
